<h1>List of Actors</h1>

<a href="/actors/new">Add a New Actor</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>">Show</a>
    </td>
    <td>
      <a href="/actors/edit/<%= actor.id %>">Edit</a>
    </td>
    <td>
      <a href="/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
