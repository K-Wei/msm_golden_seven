<h1>Add a New Actor</h1>

<form action="/actors/add">
  <div>
    <label for="actor_name">Name:</label>
    <input id="actor_name" type="string" name="add_name">
  </div>
  <div>
    <label for="actor_bio">Biography:</label>
    <textarea id="actor_bio" name="add_bio" rows=5 cols=30></textarea>
  </div>
  <div>
    <label for="actor_dob">Date of Birth:</label>
    <input id="actor_dob" type="string" name="add_dob">
  </div>
  <div>
    <label for="actor_image">Image URL:</label>
    <input id="actor_image" type="text" name="add_image_url">
  </div>
  <div>
    <button>Add Actor Information</button>
  </div>
</form>

