<h1>List of Movies</h1>

<a href="/movies/new">Add a New Movie</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td>
      <img src="<%= movie.image_url %>" width="80">
    </td>
    <td>
      <%= movie.title %> (<%= movie.year %>)
    </td>
    <td>
      <a href="/movies/<%= movie.id %>">Show</a>
    </td>
    <td>
      <a href="/movies/edit/<%= movie.id %>">Edit</a>
    </td>
    <td>
      <a href="/delete_movie/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
