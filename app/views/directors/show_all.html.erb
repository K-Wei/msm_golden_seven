<h1>List of Directors</h1>

<a href="/directors/new">Add a New Director</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.name %>
    </td>
    <td>
      <a href="/directors/<%= director.id %>">Show</a>
    </td>
    <td>
      <a href="/directors/edit/<%= director.id %>">Edit</a>
    </td>
    <td>
      <a href="/delete_director/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
